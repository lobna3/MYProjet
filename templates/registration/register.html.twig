{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
     <div class="row">
        <div class="col-md-6  mx-auto" >
            <h1 class="my-5  mb-3 text-center">Create  an account</h1>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-error rounded mb-3" role="alert">{{ flashError }}</div>
    {% endfor %}

      
      
    {{ form_start(registrationForm) }}
     <div class="row">
        <div class="col-md-6">

        {{ form_row(registrationForm.firstName) }}
         
      </div>
         <div class="col-md-6">
          {{ form_row(registrationForm.lastName) }}
      </div>
     </div>
         
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg  btn-block btn-primary" >Register</button>
         <p class="text-center text-muted mt-5 mb-3">Already have an account ? <a href="{{path('app_login')}}">Log in! </a></p>
    {{ form_end(registrationForm) }}
</div>
</div>
{% endblock %}
